{
    "extends": "./tsconfig.paths.json",
    "include": ["src"],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./lib"
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
